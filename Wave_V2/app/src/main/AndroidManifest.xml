<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.wave_v2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wave_V2">
        <activity android:name=".view.activity.MakePlaylistActivity"></activity>
        <activity android:name=".view.activity.GenreActivity" />
        <activity android:name=".view.activity.SignUpActivity" />
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.MainActivity" />
        <activity android:name="" />
        <activity
            android:name=".view.activity.IntroActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>